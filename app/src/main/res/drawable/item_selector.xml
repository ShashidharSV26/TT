<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <!-- Define the content of the ripple effect -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#54979393" /> <!-- Add your desired color and alpha here -->
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#758F8D8D" /> <!-- Add your desired color here -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFF" /> <!-- Add your default color here -->
        </shape>
    </item>
</selector>